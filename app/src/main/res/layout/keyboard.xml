<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Q"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/w"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="W"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/e"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="E"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/r"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="R"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/t"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="T"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/y"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Y"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/u"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="U"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/i"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="I"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/o"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="O"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/p"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="P"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/aa"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Å"
            android:textSize="14sp"
            android:padding="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="11"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="A"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/s"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="S"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/d"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="D"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/f"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="F"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/g"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="G"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/h"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="H"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/j"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="J"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/k"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="K"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/l"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="M"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/oe"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Ö"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/ae"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Ä"
            android:textSize="14sp"
            android:padding="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="11"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/z"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Z"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/x"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="X"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="C"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/v"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="V"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/b"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="B"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/n"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="N"
            android:textSize="14sp"
            android:padding="2dp" />
        <Button
            android:id="@+id/m"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="M"
            android:textSize="14sp"
            android:padding="2dp" />

        <Button
            android:id="@+id/backspace"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:text="⌫"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>